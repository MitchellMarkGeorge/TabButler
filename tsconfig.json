{
  "compilerOptions": {
    "target": "ES6",
    "types": ["vite/client", "node", "chrome"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "noEmit": true, // not sure if this is needed
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
    }
  },
  "include": ["src", "vite.config.ts"],
 }
