
{
  "manifest_version": 3,
  "name": "Tab Butler",
  "short_name": "Tab Butler",
  "author": "Mitchell Mark-George",
  "version": "1.0",
  "description": "A full-featured tab manager at your service",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "content/content.js"
      ],
      "css": ["content/content.css"]
    }
  ],
  "commands": {
    "toggle-tab-search": {
      "suggested_key": "Ctrl+Shift+S",
      "description": "Toggle tab search in current page"
    }
  }
}
